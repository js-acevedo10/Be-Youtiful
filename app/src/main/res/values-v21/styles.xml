<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <!-- Customize your theme here. -->
                <item name="android:colorBackground">@color/background_material_light</item>
                <item name="android:colorForeground">@color/bright_foreground_material_light</item>
                <item name="colorAccent">@color/accent</item>
                <item name="colorPrimary">@color/primary</item>
                <item name="colorPrimaryDark">@color/primary_dark</item>
                <item name="android:textColor">@color/primary_text</item>
                <item name="android:textColorSecondary">@color/secondary_text</item>
                <item name="android:navigationBarColor">@color/primary_dark</item>
                <item name="android:actionMenuTextColor">@color/secondary_text</item>
                <item name="android:activatedBackgroundIndicator">@color/primary_light</item>
                <item name="android:windowDrawsSystemBarBackgrounds">true</item>
                <item name="android:windowAnimationStyle">@null</item>
        </style>
        <style name="ButtonStyle" parent="android:Widget.Material.Button">
                <item name="android:background">@drawable/custom_btn</item>
        </style>
</resources>